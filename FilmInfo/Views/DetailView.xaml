<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FilmInfo.Views"
        x:Class="FilmInfo.Views.DetailView"
        mc:Ignorable="d"
        Title="DetailView" Height="700" Width="800"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <Binding Path="DetailViewModel" Source="{StaticResource ViewModelLocator}"/>
    </Window.DataContext>
    <Grid d:DataContext="{d:DesignData /SampleData/DetailViewModelSampleData.xaml}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding SelectedMovie.Name}" HorizontalAlignment="Center" FontSize="32"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image Source="{Binding SelectedMovie.Poster}" Height="400" Margin="20">
                <Image.Effect>
                    <DropShadowEffect ShadowDepth="15" BlurRadius="30" Direction="315"/>
                </Image.Effect>
            </Image>
            <GroupBox Header="Info:" Grid.Column="1" Margin="10" FontWeight="DemiBold">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                </Grid>
            </GroupBox>
        </Grid>
        <GroupBox Grid.Row="2" Header="Zusammenfassung:" Margin="10" FontWeight="DemiBold">
            <ScrollViewer  VerticalScrollBarVisibility="Auto">
                <TextBlock  Margin="20" Text="{Binding SelectedMovie.Description}" FontWeight="Normal" FontSize="13" TextWrapping="WrapWithOverflow" />
            </ScrollViewer>
        </GroupBox>
    </Grid>
</Window>
